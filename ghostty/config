# ghostty config
# print current config ghostty +show-config
# print default config ghostty +show-config --default --docs

# Empty values reset the configuration to the default value
font-family =

# theme
# list themes with ghostty +list-themes
theme = Bright Lights

background-opacity = 0.9

cursor-style = block
shell-integration = zsh

# The style of the macOS titlebar. Available values are: "native",
# "transparent", "tabs", and "hidden".
macos-titlebar-style = hidden

macos-titlebar-proxy-icon = hidden

keybind = super+shift+right=new_split:right
keybind = super+shift+down=new_split:down
keybind = super+right=goto_split:right
keybind = super+left=goto_split:left
keybind = super+down=goto_split:bottom
keybind = super+up=goto_split:top
keybind = super+shift+r=reload_config

